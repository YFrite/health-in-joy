<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Сколько вы сьели?"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/scada_bold"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/kcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="number"
        android:hint="Ккал"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@font/scada_regular"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kcal"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="number"
        android:hint="Жиров"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@font/scada_regular"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fats"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="number"
        android:hint="Протеина"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@font/scada_regular"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/carbohydrates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/protein"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="number"
        android:hint="Углеводов"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@font/scada_regular"
        />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carbohydrates"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/dark_green"
        android:textColor="@color/white"
        android:fontFamily="@font/scada_regular"
        android:text="Ок"/>

</androidx.constraintlayout.widget.ConstraintLayout>